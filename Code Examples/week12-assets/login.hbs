<!doctype html>
<html>

<head>
  <title>Login</title>
</head>

<body>
  {{#if errorMsg}}
    <h5>{{errorMsg}}&nbsp;</h5>
  {{else}}
    <h5>Please login below</h5>
  {{/if}}
  <form method="post" action="/login">
    <label>Username</label><input name="username" type="text">
    <label>Password</label><input name="password" type="password">
    <button type="submit">Login</button>
  </form>
</body>

</html>